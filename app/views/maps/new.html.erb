<h1> New Place </h1>
<% if !@map.errors.empty? %>
	<% @map.errors.full_messages.each do |msg| %>
	<h4 style="color:red;"><%= msg %></h4>
	<% end %>
<% end %>

<%= form_for @map do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.label :latitude %>
	<%= f.text_field :latitude %>
	<%= f.label :longitude %>
	<%= f.text_field :longitude %>
	<br/>
	<%= f.submit class: 'button radius small'%>
<% end %>